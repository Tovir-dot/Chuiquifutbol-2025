---
export interface Props {
  title: string;
  subtitle?: string;
  id?: string;
}

const { title, subtitle, id } = Astro.props;
---

<div id={id} class="mb-12 text-center">
  <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-neo-black mb-4 uppercase tracking-tight">
    {title}
  </h2>
  {subtitle && (
    <p class="text-xl md:text-2xl font-bold text-gray-700 max-w-4xl mx-auto leading-tight">
      {subtitle}
    </p>
  )}
</div>