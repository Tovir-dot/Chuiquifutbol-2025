---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Table from '../components/Table.astro';
import MatchItem from '../components/MatchItem.astro';
import Gallery from '../components/Gallery.astro';

import equiposData from '../data/equipos.json';
import resultadosFinalesData from '../data/resultados_finales.json';
import gruposData from '../data/grupos.json';
import partidosData from '../data/partidos.json';
import posicionesData from '../data/posiciones.json';
import fairPlayData from '../data/fair_play.json';
import goleadoresData from '../data/goleadores.json';
import agradecimientosData from '../data/agradecimientos.json';
---

<Layout title="CHIQUIF√öTBOL Sur Occidente Colombia 2025 - Torneo Oficial">
  <Navbar />
  
  <!-- Hero Section -->
  <section id="inicio" class="pt-20 pb-16 bg-gradient-to-br from-neo-yellow via-neo-cyan to-neo-magenta">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-5xl md:text-7xl lg:text-9xl font-black text-neo-black mb-6 uppercase tracking-tight leading-tight">
          CHIQUIF√öTBOL
        </h1>
        <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-xl p-8 mb-8">
          <h2 class="text-2xl md:text-4xl lg:text-5xl font-black text-neo-black mb-4 uppercase">
            Sur Occidente de Colombia 2025
          </h2>
          <p class="text-lg md:text-2xl font-bold text-gray-800 mb-6">
            Clasificatorio Final Internacional rumbo a Ch√≠a, Cundinamarca
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div class="bg-neo-lime bg-opacity-80 border-4 border-neo-black rounded-xl p-4">
              <h3 class="font-black text-neo-black text-lg">CATEGOR√çA</h3>
              <p class="font-bold text-neo-black">Masculino 2014 - 2015</p>
            </div>
            <div class="bg-neo-magenta bg-opacity-80 border-4 border-neo-black rounded-xl p-4">
              <h3 class="font-black text-neo-black text-lg">LUGAR</h3>
              <p class="font-bold text-neo-black">Puerres, Nari√±o</p>
            </div>
            <div class="bg-neo-cyan bg-opacity-80 border-4 border-neo-black rounded-xl p-4">
              <h3 class="font-black text-neo-black text-lg">FECHAS</h3>
              <p class="font-bold text-neo-black">13 - 18 Agosto</p>
            </div>
          </div>
        </div>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a href="#resultados" class="bg-neo-black text-neo-yellow border-4 border-neo-black rounded-xl px-8 py-4 font-black text-lg uppercase tracking-wide hover:bg-neo-yellow hover:text-neo-black transition-all duration-300 shadow-neo-lg hover:shadow-neo-xl transform hover:-translate-y-1">
            Ver Resultados
          </a>
          <a href="#galeria" class="bg-neo-white text-neo-black border-4 border-neo-black rounded-xl px-8 py-4 font-black text-lg uppercase tracking-wide hover:bg-neo-black hover:text-neo-white transition-all duration-300 shadow-neo-lg hover:shadow-neo-xl transform hover:-translate-y-1">
            Galer√≠a de Fotos
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Equipos Participantes -->
  <section id="equipos" class="py-16 bg-neo-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Equipos Participantes" 
        subtitle="Los mejores representantes del Sur Occidente de Colombia" 
      />
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {equiposData.map((equipo) => (
          <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-lg hover:shadow-neo-xl transition-all duration-300 transform hover:-translate-y-2 p-6 text-center group">
            <div class="w-20 h-20 mx-auto mb-4 border-4 border-neo-black rounded-full overflow-hidden group-hover:border-neo-cyan transition-colors duration-300">
              <img 
                src={equipo.logo} 
                alt={`Logo ${equipo.nombre}`} 
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                loading="lazy"
              />
            </div>
            <h3 class="font-bold text-lg text-neo-black leading-tight mb-2">{equipo.nombre}</h3>
            <div class="bg-neo-yellow border-2 border-neo-black rounded-lg px-3 py-1 inline-block">
              <span class="font-black text-sm text-neo-black">GRUPO {equipo.grupo}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Resultados Finales -->
  <section id="resultados" class="py-16 bg-gradient-to-r from-neo-lime via-neo-cyan to-neo-yellow">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Resultados Finales" 
        subtitle="Los campeones del CHIQUIF√öTBOL 2025" 
      />
      
      <!-- Podium -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
        <!-- Campe√≥n -->
        <div class="md:col-span-4 lg:col-span-2 bg-neo-yellow border-4 border-neo-black rounded-2xl shadow-neo-xl p-8 text-center relative overflow-hidden">
          <div class="absolute top-4 left-4 bg-neo-black text-neo-yellow rounded-full w-12 h-12 flex items-center justify-center">
            <span class="text-2xl font-black">üèÜ</span>
          </div>
          <img 
            src={resultadosFinalesData.logocampeon} 
            alt={resultadosFinalesData.campeon} 
            class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
            loading="lazy"
          />
          <h3 class="text-3xl font-black text-neo-black mb-2 uppercase">CAMPE√ìN</h3>
          <h4 class="text-xl font-bold text-neo-black">{resultadosFinalesData.campeon}</h4>
        </div>
        
        <!-- Subcampe√≥n -->
        <div class="bg-neo-cyan border-4 border-neo-black rounded-2xl shadow-neo-lg p-6 text-center">
          <div class="absolute top-4 left-4 bg-neo-black text-neo-cyan rounded-full w-10 h-10 flex items-center justify-center">
            <span class="text-lg font-black">ü•à</span>
          </div>
          <img 
            src={resultadosFinalesData.logosubcampeon} 
            alt={resultadosFinalesData.subcampeon} 
            class="w-16 h-16 mx-auto mb-3 border-4 border-neo-black rounded-full object-cover"
            loading="lazy"
          />
          <h3 class="text-lg font-black text-neo-black mb-1">SUBCAMPE√ìN</h3>
          <h4 class="text-sm font-bold text-neo-black">{resultadosFinalesData.subcampeon}</h4>
        </div>
        
        <!-- Tercer Lugar -->
        <div class="bg-neo-magenta border-4 border-neo-black rounded-2xl shadow-neo-lg p-6 text-center">
          <div class="absolute top-4 left-4 bg-neo-black text-neo-magenta rounded-full w-10 h-10 flex items-center justify-center">
            <span class="text-lg font-black">ü•â</span>
          </div>
          <img 
            src={resultadosFinalesData.logotercero} 
            alt={resultadosFinalesData.tercero} 
            class="w-16 h-16 mx-auto mb-3 border-4 border-neo-black rounded-full object-cover"
            loading="lazy"
          />
          <h3 class="text-lg font-black text-neo-black mb-1">TERCER LUGAR</h3>
          <h4 class="text-sm font-bold text-neo-black">{resultadosFinalesData.tercero}</h4>
        </div>
      </div>
      
      <!-- Premios Individuales -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Valla Menos Vencida -->
        <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-lg p-6 text-center">
          <h3 class="text-2xl font-black text-neo-black mb-4 uppercase">ü•Ö Valla Menos Vencida</h3>
          <p class="text-lg font-bold text-neo-black">{resultadosFinalesData.valla_menos_vencida.jugador}</p>
          <p class="text-md font-semibold text-gray-700">{resultadosFinalesData.valla_menos_vencida.equipo}</p>
          <p class="text-xl font-black text-neo-cyan">{resultadosFinalesData.valla_menos_vencida.goles_en_contra} goles en contra</p>
        </div>
        
        <!-- M√°ximo Goleador -->
        <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-lg p-6 text-center">
          <h3 class="text-2xl font-black text-neo-black mb-4 uppercase">‚öΩ M√°ximo Goleador</h3>
          <p class="text-lg font-bold text-neo-black">{resultadosFinalesData.goleadores[0].jugador}</p>
          <p class="text-md font-semibold text-gray-700">{resultadosFinalesData.goleadores[0].equipo}</p>
          <p class="text-xl font-black text-neo-magenta">{resultadosFinalesData.goleadores[0].goles} goles</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Grupos -->
  <section id="grupos" class="py-16 bg-neo-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Tabla de Grupos" 
        subtitle="Distribuci√≥n de equipos por grupo" 
      />
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {gruposData.map((grupo) => (
          <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-xl p-8">
            <h3 class="text-3xl font-black text-neo-black text-center mb-6 bg-neo-yellow border-4 border-neo-black rounded-xl py-4">
              GRUPO {grupo.grupo}
            </h3>
            <div class="space-y-4">
              {grupo.equipos.map((equipo, index) => (
                <div class="flex items-center gap-4 p-4 bg-gray-50 border-2 border-neo-black rounded-xl hover:bg-neo-lime hover:bg-opacity-20 transition-colors duration-200">
                  <div class="flex-shrink-0">
                    <img 
                      src={equipo.logo} 
                      alt={equipo.nombre} 
                      class="w-12 h-12 border-2 border-neo-black rounded-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <div class="flex-1">
                    <h4 class="font-bold text-lg text-neo-black">{equipo.nombre}</h4>
                  </div>
                  <div class="bg-neo-black text-neo-white rounded-full w-8 h-8 flex items-center justify-center">
                    <span class="font-black text-sm">{index + 1}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Posiciones -->
  <section id="posiciones" class="py-16 bg-gradient-to-br from-gray-100 to-neo-lime/20">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Tabla de Posiciones" 
        subtitle="Clasificaci√≥n final del torneo" 
      />
      
      <Table 
        headers={['Pos', 'Equipo', 'PJ', 'PG', 'PE', 'PP', 'GF', 'GC', 'DG', 'PTS']}
        data={posicionesData}
        type="posiciones"
      />
    </div>
  </section>

  <!-- Partidos -->
  <section id="partidos" class="py-16 bg-neo-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Resultados de Partidos" 
        subtitle="Todos los encuentros del torneo" 
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {partidosData.map((partido) => (
          <MatchItem partido={partido} />
        ))}
      </div>
    </div>
  </section>

  <!-- Goleadores -->
  <section id="goleadores" class="py-16 bg-gradient-to-r from-neo-magenta to-neo-cyan">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Tabla de Goleadores" 
        subtitle="Los m√°ximos artilleros del torneo" 
      />
      
      <Table 
        headers={['Pos', 'Jugador', 'Equipo', 'Goles']}
        data={goleadoresData}
        type="goleadores"
      />
    </div>
  </section>

  <!-- Fair Play -->
  <section id="fair-play" class="py-16 bg-neo-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Juego Limpio" 
        subtitle="Fair Play y disciplina deportiva" 
      />
      
      <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
        {fairPlayData.map((equipo) => (
          <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-lg p-6">
            <h3 class="text-xl font-black text-neo-black mb-4 text-center bg-neo-yellow border-2 border-neo-black rounded-lg py-2">
              {equipo.equipo}
            </h3>
            <div class="space-y-3">
              {equipo.jugadores.map((jugador) => (
                <div class="flex items-center justify-between p-3 bg-gray-50 border-2 border-gray-300 rounded-lg">
                  <div class="flex-1">
                    <p class="font-semibold text-sm text-neo-black truncate" title={jugador.nombre}>
                      {jugador.nombre}
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <div class="flex gap-1">
                      {Array.from({ length: jugador.ta }).map(() => (
                        <div class="w-3 h-4 bg-yellow-400 border border-neo-black rounded-sm"></div>
                      ))}
                      {Array.from({ length: jugador.tr }).map(() => (
                        <div class="w-3 h-4 bg-red-500 border border-neo-black rounded-sm"></div>
                      ))}
                    </div>
                    <span class={`font-bold text-sm px-2 py-1 rounded ${
                      jugador.jl >= 0 ? 'text-green-600' : 'text-red-600'
                    }`}>
                      {jugador.jl > 0 ? `+${jugador.jl}` : jugador.jl}
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galer√≠a -->
  <section id="galeria" class="py-16 bg-gradient-to-br from-neo-yellow via-neo-cyan to-neo-magenta">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Galer√≠a de Im√°genes" 
        subtitle="Los mejores momentos del torneo capturados" 
      />
      
      <Gallery />
    </div>
  </section>

  <!-- Agradecimientos -->
  <section id="agradecimientos" class="py-16 bg-neo-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Agradecimientos y Apoyos" 
        subtitle="Reconocimiento a quienes hicieron posible este gran torneo" 
      />
      
      <!-- Institucionales -->
      <div class="mb-16">
        <h3 class="text-3xl font-black text-neo-black text-center mb-8 uppercase">
          Apoyo Institucional
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Alcaldesa -->
          <div class="bg-neo-yellow border-4 border-neo-black rounded-2xl shadow-neo-xl p-6 text-center">
            <img 
              src={agradecimientosData.institucionales.alcaldesa.foto} 
              alt={agradecimientosData.institucionales.alcaldesa.nombre}
              class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
              loading="lazy"
            />
            <h4 class="font-black text-lg text-neo-black mb-1">{agradecimientosData.institucionales.alcaldesa.nombre}</h4>
            <p class="font-semibold text-sm text-gray-700">{agradecimientosData.institucionales.alcaldesa.cargo}</p>
          </div>
          
          <!-- Coordinador -->
          <div class="bg-neo-cyan border-4 border-neo-black rounded-2xl shadow-neo-xl p-6 text-center">
            <img 
              src={agradecimientosData.institucionales.coordinador.foto} 
              alt={agradecimientosData.institucionales.coordinador.nombre}
              class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
              loading="lazy"
            />
            <h4 class="font-black text-lg text-neo-black mb-1">{agradecimientosData.institucionales.coordinador.nombre}</h4>
            <p class="font-semibold text-sm text-gray-700">{agradecimientosData.institucionales.coordinador.cargo}</p>
          </div>
          
          <!-- Fundaci√≥n -->
          <div class="bg-neo-magenta border-4 border-neo-black rounded-2xl shadow-neo-xl p-6 text-center">
            <img 
              src={agradecimientosData.institucionales.fundacion.logo} 
              alt={agradecimientosData.institucionales.fundacion.nombre}
              class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
              loading="lazy"
            />
            <h4 class="font-black text-lg text-neo-black">{agradecimientosData.institucionales.fundacion.nombre}</h4>
          </div>
          
          <!-- Oficina -->
          <div class="bg-neo-lime border-4 border-neo-black rounded-2xl shadow-neo-xl p-6 text-center">
            <img 
              src={agradecimientosData.institucionales.oficina.logo} 
              alt={agradecimientosData.institucionales.oficina.nombre}
              class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
              loading="lazy"
            />
            <h4 class="font-black text-lg text-neo-black">{agradecimientosData.institucionales.oficina.nombre}</h4>
          </div>
          
          <!-- Aval -->
          <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-xl p-6 text-center">
            <img 
              src={agradecimientosData.institucionales.aval.logo} 
              alt={agradecimientosData.institucionales.aval.nombre}
              class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
              loading="lazy"
            />
            <h4 class="font-black text-lg text-neo-black">{agradecimientosData.institucionales.aval.nombre}</h4>
          </div>
          
          <!-- Contacto -->
          <div class="bg-green-500 border-4 border-neo-black rounded-2xl shadow-neo-xl p-6 text-center">
            <img 
              src={agradecimientosData.institucionales.contacto.icono} 
              alt="WhatsApp"
              class="w-24 h-24 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover"
              loading="lazy"
            />
            <h4 class="font-black text-lg text-neo-white mb-2">CONTACTO OFICIAL</h4>
            <a 
              href={`https://wa.me/57${agradecimientosData.institucionales.contacto.whatsapp}`}
              class="font-black text-xl text-neo-white hover:text-neo-yellow transition-colors"
            >
              {agradecimientosData.institucionales.contacto.whatsapp}
            </a>
          </div>
        </div>
      </div>
      
      <!-- Gestores -->
      <div>
        <h3 class="text-3xl font-black text-neo-black text-center mb-8 uppercase">
          Gestores y Patrocinadores
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
          {agradecimientosData.gestores.map((gestor) => (
            <div class="bg-neo-white border-4 border-neo-black rounded-2xl shadow-neo-lg hover:shadow-neo-xl transition-all duration-300 transform hover:-translate-y-2 p-6 text-center group">
              <img 
                src={gestor.logo} 
                alt={gestor.nombre}
                class="w-16 h-16 mx-auto mb-4 border-4 border-neo-black rounded-full object-cover group-hover:border-neo-cyan transition-colors duration-300"
                loading="lazy"
              />
              <h4 class="font-bold text-sm text-neo-black mb-2 leading-tight">{gestor.nombre}</h4>
              <p class="text-xs font-semibold text-gray-600 leading-tight">{gestor.apoyo}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>